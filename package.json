{
  "name": "card-skeleton-loader",
  "version": "1.0.0",
  "description": "Simple Skeleton loader for a card component.",
  "repository": "https://github.com/dembreus/card-skeleton-loader.git",
  "author": "Dillon Embreus <35782813+dembreus@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "sass:watch": "sass --watch scss/main.scss css/style.css",
    "devserver": "cd dist & lite-server --entry-file=index.html",
    "start": "npm-run-all --parallel build:dev devserver ",
    "sass:compile": "sass scss/main.scss css/style.comp.css",
    "css:prefix": "postcss -u autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "css:compress": "sass css/style.prefix.css css/style.css -s compressed",
    "css:build": "npm-run-all sass:compile css:concat css:prefix css:compress",
    "tsc:watch": "tsc --watch",
    "tsc:build": "tsc",
    "webpack:dev": "webpack --config webpack.config.js --mode=development",
    "webpack:build": "webpack --config webpack.config.js --mode=production",
    "build:dev": "npm-run-all --parallel tsc:watch webpack:dev",
    "build": "npm-run-all tsc:build webpack:build"
  },
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concat": "^1.0.3",
    "html-webpack-plugin": "^5.5.3",
    "lite-server": "^2.6.1",
    "postcss": "^8.4.25",
    "postcss-cli": "^10.1.0",
    "sass": "^1.63.6",
    "sass-loader": "^13.3.2",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4",
    "yarn-run-all": "^3.1.1"
  }
}
